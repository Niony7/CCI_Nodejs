<div class="modal fade" id="new_formation_modal" tabindex="-1" role="dialog" aria-labelledby="new_formation_modal"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="new_formation_modal">Nouveau formation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="new-mat-appr" class="col-form-label">Matricule Apprenti:</label>
                        <input type="text" class="form-control" id="new-mat-appr" required>

                    </div>
                    <div class="form-group">
                        <label for="new-id-stage" class="col-form-label">Identifiant du Stage:</label>
                        <input type="text" class="form-control" id="new-id-stage" required>
                    </div>
                    <div class="form-group">
                        <label for="new-code-met" class="col-form-label">Code Metier:</label>
                        <input type="text" class="form-control" id="new-code-met" required>
                    </div>
                    <div class="form-group">
                        <label for="new-date-form" class="col-form-label">Date de formation:</label>
                        <input type="date" class="form-control" id="new-date-form" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="ajout_formation()">Ajouter formation</button>
            </div>
        </div>
    </div>
</div>